{
   "manifest_version": 2,
   "name": "Insert Email",
   "version": "0.0.3",
   "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
   "commands": {
      "insert-email": {
         "description": "Insert Email Address",
         "suggested_key": {
            "default": "Ctrl+Shift+I",
            "mac": "Ctrl+Shift+I"
         }
      }
   },
   "description": "Adds an email address to a form input via a context menu",
   "options_page": "options.html",
   "permissions": [ "activeTab", "background", "contextMenus", "storage" ]
}
